        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_pointer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_pointer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="90"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="12dp"/>

        <HorizontalScrollView
            android:id="@+id/scrollview_chip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/ll_chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_chat">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipgroup_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"></com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_chat"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollview_chip">

            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="top"
                android:hint="원하시는 숙소를 말씀해주세요."
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColorHint="#6B6B6B"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cvRecord"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="8dp"
                app:strokeColor="#EAEAEA"
                app:strokeWidth="2dp"
                app:layout_constraintBottom_toBottomOf="@id/cv_send"
                app:layout_constraintEnd_toStartOf="@id/cv_send">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_record" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="8dp"
                app:strokeColor="#EAEAEA"
                app:strokeWidth="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_send" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        app:headerLayout="@layout/layout_side_sheet"/>

</androidx.drawerlayout.widget.DrawerLayout>