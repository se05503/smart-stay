<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="404dp"
    android:layout_height="214dp"
    android:background="@drawable/ic_callout">

    <ImageView
        android:id="@+id/ivCallOutIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_tmap_marker_blue"
        android:layout_marginStart="20dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCallOutAccommodationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="숙소 이름"
        android:textSize="24sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivCallOutIcon"
        app:layout_constraintStart_toEndOf="@id/ivCallOutIcon"
        app:layout_constraintBottom_toTopOf="@id/tvCallOutAccommodationPrice"/>

    <TextView
        android:id="@+id/tvCallOutAccommodationPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="202,000원"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvCallOutAccommodationName"
        app:layout_constraintBottom_toBottomOf="@id/ivCallOutIcon"
        app:layout_constraintTop_toBottomOf="@id/tvCallOutAccommodationName"/>

</androidx.constraintlayout.widget.ConstraintLayout>