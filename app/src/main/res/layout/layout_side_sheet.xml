<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/ll_back_to_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화로 돌아가기"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="추천 숙소 필터링 키워드"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipgroup_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/pet"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_pet"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/restaurant"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레스토랑"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_restaurant"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bar"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_bar"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cafe"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_cafe"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/fitnessCenter"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피트니스"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_fitness"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/swimmingPool"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수영장"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_pool"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/spa"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스파"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_spa"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sauna"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사우나"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_sauna"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/receptionHall"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연회장"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_reception"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/businessCenter"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비즈니스 센터"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_business"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/oceanView"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오션뷰"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_ocean_view"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>