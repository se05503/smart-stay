<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="대화 키워드 필터링 💬️"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_pet"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_pet"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_restaurant"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레스토랑"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_restaurant"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bar"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_bar"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_cafe"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_cafe"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_fitness"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피트니스"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_fitness"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_swimming_pool"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수영장"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_pool"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_spa"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스파"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
