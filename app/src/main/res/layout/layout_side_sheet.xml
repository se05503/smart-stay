            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_sauna"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사우나"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_sauna"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_reception_hall"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연회장"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_reception"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_business_center"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비즈니스 센터"
            android:textColor="@color/selector_chip_text"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#F0F4F5"
            app:chipIcon="@drawable/ic_business"
            app:chipIconSize="20dp"
            app:chipIconTint="@color/selector_chip_icon"
            app:chipIconVisible="true"
            app:chipStrokeColor="@color/selector_chip_stroke"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_ocean_view"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
