<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TMapVectorFragment">

    <FrameLayout
        android:id="@+id/tmapVectorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMapRouteNavigation"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/ivMapStartPoint"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                app:tint="@color/primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/viewPointDivider"
                app:layout_constraintStart_toStartOf="@id/viewPointDivider"/>

            <EditText
                android:id="@+id/etMapStartPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="출발지 입력"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginHorizontal="4dp"
                android:inputType="text"
                app:layout_constraintEnd_toStartOf="@id/ivMapSwap"
                app:layout_constraintStart_toEndOf="@id/ivMapStartPoint"
                app:layout_constraintTop_toTopOf="@id/ivMapStartPoint"
                app:layout_constraintBottom_toBottomOf="@id/ivMapStartPoint"/>

            <View
                android:id="@+id/viewPointDivider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/divider"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivMapSwap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivMapEndPoint"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                app:tint="@color/secondary"
                app:layout_constraintTop_toBottomOf="@id/viewPointDivider"
                app:layout_constraintStart_toStartOf="@id/viewPointDivider"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/etMapEndPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="도착지 입력"
                android:inputType="text"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintStart_toEndOf="@id/ivMapEndPoint"
                app:layout_constraintTop_toTopOf="@id/ivMapEndPoint"
                app:layout_constraintBottom_toBottomOf="@id/ivMapEndPoint"
                app:layout_constraintEnd_toStartOf="@id/ivMapSwap"/>

            <ImageView
                android:id="@+id/ivMapSwap"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_swap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupHomeAndFineRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvMapRouteNavigation"
        app:layout_constraintEnd_toEndOf="@id/cvMapRouteNavigation">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHome"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 위치"
            android:elevation="4dp"
            app:chipIcon="@drawable/ic_gps"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipIconTint="@color/black"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNavigate"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="길찾기"
            android:elevation="4dp"
            app:chipIcon="@drawable/ic_navigate"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipIconTint="@color/black"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

    </com.google.android.material.chip.ChipGroup>

    <include
        android:id="@+id/cvRouteCarDetailInfoOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_car_route_detail_open"
        tools:visibility="visible"
        android:visibility="invisible"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@id/chipGroupHomeAndFineRoute"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        android:id="@+id/cvRouteCarDetailInfoClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_car_route_detail_close"
        tools:visibility="invisible"
        android:visibility="invisible"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@id/chipGroupHomeAndFineRoute"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupMarkerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewTMap">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAccommodation"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숙소"
            android:elevation="4dp"
            app:chipIcon="@drawable/ic_chip_accommodation"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipIconTint="#BBAB94"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAttractionShopping"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑"
            android:elevation="4dp"
            app:chipIcon="@drawable/ic_chip_shopping"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipIconTint="#AC87CC"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAttractionTour"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관광명소"
            android:elevation="4dp"
            app:chipIcon="@drawable/ic_chip_tour"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipIconTint="#84CAE2"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAttractionLeisure"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레저"
            android:elevation="4dp"
            app:chipIcon="@drawable/ic_chip_leisure"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipIconTint="#7CD7BD"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRouteCar"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동차"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_car"
            app:chipIconVisible="true"
            app:chipIconTint="#009688"
            app:chipIconSize="20dp"
            app:iconStartPadding="4dp"
            app:chipBackgroundColor="@color/white"/>

    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="40dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_tmap_accomodation"/>

</androidx.constraintlayout.widget.ConstraintLayout>