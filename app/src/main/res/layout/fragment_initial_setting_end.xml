<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_initial_setting_end_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요! 선택해 주신 정보로 \n알맞는 숙소를 추천해드릴게요! \n채팅창으로 넘어가볼까요?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_thumb"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_initial_setting_end_title"
        app:layout_constraintStart_toStartOf="@id/tv_initial_setting_end_title"
        app:layout_constraintEnd_toEndOf="@id/tv_initial_setting_end_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_initial_setting_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="넘어가기"
        android:textColor="@color/white"
        android:backgroundTint="@color/btn_color"
        android:background="@drawable/shape_button_round"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>