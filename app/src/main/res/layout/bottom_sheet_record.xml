<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvVoiceMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음성메세지"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRecordWaveform"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/background_gray_200"
        app:strokeWidth="0dp"
        app:cardCornerRadius="12dp"
        app:contentPadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvVoiceMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ivPlayRecord"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_play"
            tools:visibility="visible"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvRecordDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@color/background_gray_700"
            android:textSize="16sp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvBackToChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvRecordWaveform"
        app:layout_constraintEnd_toStartOf="@id/sivRecordVoiceState"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivRecordVoiceState"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_record"
        android:background="@color/background_gray_200"
        app:contentPadding="6dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:layout_constraintTop_toTopOf="@id/tvBackToChat"
        app:layout_constraintBottom_toBottomOf="@id/tvBackToChat"
        app:layout_constraintStart_toEndOf="@id/tvBackToChat"
        app:layout_constraintEnd_toStartOf="@id/sivSendVoiceMessage"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivSendVoiceMessage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_send"
        android:background="@color/background_gray_200"
        app:contentPadding="6dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sivRecordVoiceState"
        app:layout_constraintBottom_toBottomOf="@id/sivRecordVoiceState"
        app:layout_constraintStart_toEndOf="@id/sivRecordVoiceState"/>

</androidx.constraintlayout.widget.ConstraintLayout>