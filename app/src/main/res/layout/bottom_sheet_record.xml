<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVoiceMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="음성메세지"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRecordWaveform"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/background_gray_200"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVoiceMessage"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPlayState"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_play"
                android:visibility="invisible"
                tools:visibility="visible" />

            <com.example.smartstay.presentation.chat.VoiceWaveformView
                android:id="@+id/viewVoiceWaveForm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvRecordDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00.00"
                android:textColor="@color/background_gray_700"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvBackToChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="취소"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/sivRecordVoiceState"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvRecordWaveform" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivRecordVoiceState"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/background_gray_200"
        android:src="@drawable/ic_record"
        app:contentPadding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/tvBackToChat"
        app:layout_constraintEnd_toStartOf="@id/sivSendVoiceMessage"
        app:layout_constraintStart_toEndOf="@id/tvBackToChat"
        app:layout_constraintTop_toTopOf="@id/tvBackToChat"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivSendVoiceMessage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/background_gray_200"
        android:src="@drawable/ic_send"
        app:contentPadding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/sivRecordVoiceState"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sivRecordVoiceState"
        app:layout_constraintTop_toTopOf="@id/sivRecordVoiceState"
        app:shapeAppearanceOverlay="@style/circleImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>