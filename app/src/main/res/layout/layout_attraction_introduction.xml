<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="4dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvAttractionIntroductionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        tools:text="1"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAttractionIntroductionCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="@color/tour_fill"
        app:cardCornerRadius="4dp"
        app:strokeWidth="0dp"
        app:contentPaddingLeft="2dp"
        app:contentPaddingRight="2dp">
        <TextView
            android:id="@+id/tvAttractionIntroductionCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="관광명소"
            android:textColor="@color/white"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvAttractionIntroductionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="중문관광단지"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_gray_200"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:contentPaddingLeft="6dp"
        app:contentPaddingTop="2dp"
        app:contentPaddingBottom="2dp"
        app:contentPaddingRight="6dp">
        <TextView
            android:id="@+id/tvAttractionIntroductionSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/background_gray_700"
            tools:text="#여행객"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>