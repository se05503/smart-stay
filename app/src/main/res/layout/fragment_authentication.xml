<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/lottie_login"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/tv_authentication_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="신개념 숙소 추천 앱, 스마트스테이\n챗봇 대화 형식으로\n맞춤형 숙소를 간편하게 찾아보세요!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_authentication_title"
        app:layout_constraintStart_toStartOf="@+id/tv_authentication_title"
        app:layout_constraintTop_toBottomOf="@id/tv_authentication_title" />

    <TextView
        android:id="@+id/tv_authentication_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="스마트스테이"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_login_kakao"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_login_kakao"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_authentication_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/iv_login_naver"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_login_naver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login_kakao" />

    <ImageView
        android:id="@+id/iv_login_google"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_login_google"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_login_naver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLoginGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게스트로 로그인하기"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_login_google"
        app:layout_constraintStart_toStartOf="@id/iv_login_google"
        app:layout_constraintEnd_toEndOf="@id/iv_login_google"/>

</androidx.constraintlayout.widget.ConstraintLayout>