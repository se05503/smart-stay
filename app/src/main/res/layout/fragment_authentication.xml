<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_authentication_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="신개념 숙소 추천 앱, 스마트스테이\n챗봇 대화 형식으로\n맞춤형 숙소를 간편하게 찾아보세요!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_authentication_title"
        app:layout_constraintStart_toStartOf="@+id/tv_authentication_title"
        app:layout_constraintTop_toBottomOf="@id/tv_authentication_title" />

    <TextView
        android:id="@+id/tv_authentication_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="monospace"
        android:text="스마트스테이"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_login_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_large_wide"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_authentication_description"
        app:layout_constraintStart_toStartOf="@id/tv_authentication_description"
        app:layout_constraintEnd_toEndOf="@id/tv_authentication_description"/>

    <TextView
        android:id="@+id/tvTextOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="또는"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="@id/iv_login_kakao"
        app:layout_constraintEnd_toEndOf="@id/iv_login_kakao"
        app:layout_constraintTop_toBottomOf="@id/iv_login_kakao"/>

    <ImageView
        android:id="@+id/iv_login_naver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_naver_login_small"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_login_google"
        app:layout_constraintTop_toBottomOf="@id/tvTextOr"/>


    <ImageView
        android:id="@+id/iv_login_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_google_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_login_naver"
        app:layout_constraintTop_toTopOf="@id/iv_login_naver"/>

</androidx.constraintlayout.widget.ConstraintLayout>