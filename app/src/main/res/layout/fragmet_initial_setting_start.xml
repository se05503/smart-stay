<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_initial_setting_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다! 🙌"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tv_initial_setting_start_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몇 가지 간단한 질문에 답해주시면, \n내게 딱 맞는 맞춤 숙소를 추천해드릴게요!"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_initial_setting_start_title"
        app:layout_constraintStart_toStartOf="@id/tv_initial_setting_start_title"
        app:layout_constraintEnd_toEndOf="@id/tv_initial_setting_start_title"/>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_house"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_initial_setting_start_description"
        app:layout_constraintStart_toStartOf="@id/tv_initial_setting_start_description"
        app:layout_constraintEnd_toEndOf="@id/tv_initial_setting_start_description"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_initial_setting_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:textColor="@color/white"
        android:backgroundTint="@color/btn_color"
        android:background="@drawable/shape_button_round"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>